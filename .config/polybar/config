;;
;; color definitions
;;

[colors]
background       = #66303B3F
foreground       = #cecfd1
foreground-alert = #f20c45

black      = #000000
white      = #ffffff

red        = #c70039
green      = #a0ff70
blue       = #46AFE8

yellow     = #ffc300

gray       = #444444
gray-light = #a0a0a0
gray-dark  = #3b3c3d

navy       = #193257

accent     = ${colors.green}

;;
;; main bar
;;
[bar/top]
width = 100%
height = 30
radius = 0.0
fixed-center = true

offset-x = 0%
offset-y = 1%

wm-name = i3
locale = pl_PL.UTF-8
enable-ipc = true
monitor = eDP1

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.background}

border-size = 0
border-color = ${colors.background}

padding-left = 10
padding-right = 10

module-margin-left = 2
module-margin-right = 2

font-0 = "Noto Sans:size=10:antialias=true;1"
font-1 = "FontAwesome:size=10;2.5"

modules-left = i3
modules-center = xwindow
modules-right = imgwmon aqi todo system-uptime-pretty volume filesystem wlan eth date battery-combined-shell powermenu

tray-position = right
tray-padding = 0
tray-background = ${colors.background}
tray-detached = false
tray-maxsize = 12
tray-offset-y = -1

wm-restack = i3
override-redirect = false

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
cursor-click = pointer
cursor-scroll = ns-resize

;;
;; i3 module
;;
[module/i3]
type = internal/i3
format = <label-state> <label-mode>

label-mode = %mode%
pin-workspaces = true
strip-wsnumbers = false

label-focused = %icon%
label-focused-foreground = ${colors.navy}
label-focused-background = ${colors.gray-light}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1

ws-icon-0  = "1;"
ws-icon-1  = "2;"
ws-icon-2  = "3;"
ws-icon-3  = "4;"
ws-icon-4  = "5;5"
ws-icon-5  = "6;6"
ws-icon-6  = "7;7"
ws-icon-7  = "8;8"
ws-icon-8  = "9;"
ws-icon-9  = "10;10"

;;
;; xwindow module
;;
[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%
format-foreground = ${colors.white}
label-maxlen = 50

;;
;; RAM module
;;
[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%

;;
;; filesystem module
;;
[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /

; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing between entries
; Default: 2
spacing = 4

format-mounted =  <label-mounted>
label-mounted  = %percentage_used% %
format-mounted-underline = ${colors.blue}

;;
;; wlan module
;;
[module/wlan]
type = internal/network
interface = wlp4s0
interval = 1

;format-connected-prefix = " "
format-connected = <ramp-signal> <label-connected>
format-connected-prefix-foreground = ${colors.green}

label-connected = %essid%%downspeed:9% %local_ip%

format-connected-underline = ${colors.red}

format-disconnected = 

;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 =
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 
ramp-signal-foreground = ${colors.accent}

;;
;; ethernet module
;;
[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-prefix = "eth "
format-connected-prefix-foreground = ${colors.foreground}
format-connected-underline = ${colors.green}
label-connected = %local_ip% %downspeed:9%
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;;
;; date module
;;
[module/date]
type = internal/date
interval = 1

date = "%m-%d"
date-alt = " %Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground}

label =  %date%  %time%

;;
;; xkeyboard module
;;
[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.foreground-alt}

;;
;; volume module
;;
[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
module-margin-right = 1
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.foreground}

format-volume-background = ${colors.background}
format-volume-foreground = ${colors.foreground}

label-muted = 
label-muted-foreground = ${colors.red}

;;;
;;; !External modules!
;;;
;;
;; hexdate module
;;
[module/hexdate]
type     = custom/script
exec     = $POLYBAR_HOME/scripts/info-hexdate.sh
interval = 60

;;
;; openvpn module
;;
[module/openvpn]
type          = custom/script
exec          =
exec-if       = pgrep -x openvpn
interval      = 5
format-prefix = " "
format-prefix-foreground = ${colors.green}

;;
;; imgwmon module
;;
[module/imgwmon]
type = custom/script
exec = get-imgwmon-bar
tail = false
interval = 300

;;
;; air quality index module
;;
[module/aqi]
type = custom/script
exec = echo -ne "aqi " && $POLYBAR_HOME/scripts/info-airqualityindex.sh
interval = 600

;;
;; system-uptime-pretty module
;;
[module/system-uptime-pretty]
type = custom/script
exec = $POLYBAR_HOME/scripts/system-uptime-pretty.sh
interval = 30


;;
;; battery module
;;
[module/battery-combined-shell]
type = custom/script
exec = $POLYBAR_HOME/scripts/battery-combined-shell.sh
tail = true
format-foreground = ${colors.yellow}

;;
;; powermenu module
;;
[module/powermenu]
type = custom/menu

expand-right = false
expand-left = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.red}
label-close = 
label-close-foreground = ${colors.red}
label-separator = " "
label-separator-foreground = ${colors.foreground}

menu-0-0 = lock
menu-0-0-exec = betterlockscreen -l dimblur

menu-0-1 = suspend
menu-0-1-exec = menu-open-1
menu-1-0 = suspend
menu-1-0-exec = betterlockscreen -s dimblur

menu-0-2 = log off
menu-0-2-exec = menu-open-2
menu-2-0 = log off
menu-2-0-exec = i3-msg exit

menu-0-3 = reboot
menu-0-3-exec = menu-open-3
menu-3-0 = reboot
menu-3-0-exec = systemctl reboot

menu-0-4 = power off
menu-0-4-exec = menu-open-4
menu-4-0 = power off
menu-4-0-exec = systemctl shutdown

;;;
;;; settings
;;;
[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
